<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <Button
        android:id="@+id/btn_setting"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dip"
        android:background="@drawable/setting"
        android:onClick="Setting" />

    <com.dreamori.sanzijing.SanZiJingView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dip"
        android:layout_above="@+id/layout_control"
        android:layout_alignWithParentIfMissing="true"
        />

    <TableLayout
        android:id="@+id/layout_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adLayout"
        android:layout_alignWithParentIfMissing="true"
        android:stretchColumns="0,1,2,3" >

        <TableRow>

            <RelativeLayout>

                <Button
                    android:id="@+id/btn_previos"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:layout_centerInParent="true"
                    android:layout_margin="12dip"
                    android:background="@drawable/previous"
                    android:onClick="ShowPreviosImage" />
            </RelativeLayout>

            <RelativeLayout>

                <Button
                    android:id="@+id/btn_exp"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:layout_centerInParent="true"
                    android:layout_margin="12dip"
                    android:background="@drawable/exp"
                    android:onClick="ShowWholeExplanation" />
            </RelativeLayout>

            <RelativeLayout>

                <Button
                    android:id="@+id/btn_music"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:layout_centerInParent="true"
                    android:layout_margin="12dip"
                    android:background="@drawable/music"
                    android:onClick="PlayMp3" />
            </RelativeLayout>

            <RelativeLayout>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:layout_centerInParent="true"
                    android:layout_margin="12dip"
                    android:background="@drawable/next"
                    android:onClick="ShowNextImage" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/adLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>