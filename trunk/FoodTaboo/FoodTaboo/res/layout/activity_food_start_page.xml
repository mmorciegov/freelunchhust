<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/firstItemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"        
        android:layout_marginTop="30dip"
        android:src="@drawable/addfood" />

    <ImageView
        android:id="@+id/addImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="60dip"
        android:layout_toRightOf="@+id/firstItemImageView"
        android:src="@drawable/add" />

    <ImageView
        android:id="@+id/secondItemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/addImageView"
        android:layout_marginTop="30dip"
        android:layout_alignParentRight="true"
        android:src="@drawable/addfood" />

    <ImageButton
        android:id="@+id/showDetailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addImageView"
        android:layout_marginTop="80dip"
        android:layout_centerHorizontal="true"
        android:textSize="22.0dip" 
        android:text="@string/search_food"
        android:src="@drawable/searchbutton"
         />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showDetailBtn"
        android:layout_marginTop="50dip"
        android:layout_marginLeft="10dip"
        android:orientation="horizontal"
         >
        <ImageView
            android:id="@+id/statusImageView" 
            android:layout_width="120dip"
            android:layout_height="120dip"            
            android:src="@drawable/good_1" 
            />
        
        <LinearLayout 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dip"
            >
			<TextView 
				android:id="@+id/statusTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:textColor="#ff000000"
				android:textSize="30.0dip" 
				android:layout_gravity="left"
				android:text="@string/status_text"
				/>    
			<TextView 
				android:id="@+id/reasonTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:textColor="#ff000000"
				android:textSize="22.0dip" 
				android:layout_gravity="left"
				android:text="@string/reason_text"
				/>              
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
