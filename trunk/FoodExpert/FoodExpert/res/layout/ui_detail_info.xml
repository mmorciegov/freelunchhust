   	<ImageView
   	    android:id="@+id/ui_detail_pk"
   	    android:layout_gravity="center"
   	    android:layout_width="60dip"
   	    android:layout_height="45dip"
   	    android:layout_centerHorizontal="true"
   	    android:layout_marginTop="96dip"
   	    android:src="@drawable/pk" />
   			
	<ImageView 
		android:id="@+id/ui_detail_degree"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/ui_detail_pk"
		android:layout_marginTop="128dip"
		/>      	
		
   	<TextView 
		android:id="@+id/ui_detail_hint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textColor="#ffff0000"
		android:textSize="22.0dip" 
		android:layout_gravity="center"
		android:layout_margin="30dip"
		android:layout_below="@+id/linearLayout1"
		/>

   	<Button
   	    android:id="@+id/ui_detail_search"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentBottom="true"
   	    android:layout_alignParentRight="true"
   	    android:layout_margin="10dip"
   	    android:background="@drawable/search"
   	    android:text="@string/menu_search" />
   	
   	<LinearLayout
        android:layout_alignParentBottom="true"
	    android:id="@+id/adLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	   />

</RelativeLayout>