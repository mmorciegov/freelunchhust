<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:orientation="vertical" >
        
        <ImageView 
			android:id="@+id/ui_detail_icon_1"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_margin="3.0dip"
			/>   
				
		<TextView 
			android:id="@+id/ui_detail_name_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#ff000000"
			android:textSize="22.0dip" 
			android:layout_gravity="center"
			/>            
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:orientation="vertical" >
		
        <ImageView 
			android:id="@+id/ui_detail_icon_2"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_margin="3.0dip"
			/>   
				
		<TextView 
			android:id="@+id/ui_detail_name_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#ff000000"
			android:textSize="22.0dip" 
			android:layout_gravity="center"
			/>    
			        
    </LinearLayout>
    
   	<TextView 
		android:id="@+id/ui_detail_vs"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textColor="#ffff0000"
		android:textSize="22.0dip" 
		android:layout_gravity="center"
		android:layout_centerHorizontal="true"
		android:text="V"
		android:layout_margin="30dip"
		/>   
		
	<ImageView 
		android:id="@+id/ui_detail_degree"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_margin="3.0dip"
		android:layout_below="@+id/linearLayout1"
		/>      	
		
   	<TextView 
		android:id="@+id/ui_detail_hint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textColor="#ffff0000"
		android:textSize="22.0dip" 
		android:layout_gravity="center"
		android:layout_margin="30dip"
		android:layout_below="@+id/linearLayout1"
		android:layout_toRightOf="@+id/ui_detail_degree"
		/>

   	<CheckBox
   	    android:id="@+id/ui_detail_tip"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
   	    android:text="始终显示在初始化时" />

</RelativeLayout>