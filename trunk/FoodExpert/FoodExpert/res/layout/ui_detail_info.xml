<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/relativeLayout1">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dip"
        android:layout_marginLeft="24dip"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/ui_detail_icon_1"
            android:layout_gravity="center"
            android:padding="8.0dip"
            android:background="#7F33B6EA"
            android:layout_width="96dip"
            android:layout_height="96dip" /> 
          
				
		<TextView 
			android:id="@+id/ui_detail_name_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#ff000000"
			android:textSize="22.0dip" 
			android:layout_gravity="center"
			/>            
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dip"
        android:layout_marginRight="24dip"
        android:orientation="vertical" >
		
        <ImageView
            android:id="@+id/ui_detail_icon_2"
            android:layout_gravity="center"
            android:padding="8.0dip"
            android:background="#7F33B6EA"
            android:layout_width="96dip"
            android:layout_height="96dip" /> 
				
		<TextView 
			android:id="@+id/ui_detail_name_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#ff000000"
			android:textSize="22.0dip" 
			android:layout_gravity="center" />    
			        
    </LinearLayout>
    
<!--    	<TextView  -->
<!-- 		android:id="@+id/ui_detail_vs" -->
<!-- 		android:layout_width="wrap_content" -->
<!-- 		android:layout_height="wrap_content"  -->
<!-- 		android:textColor="#ffff0000" -->
<!-- 		android:textSize="22.0dip"  -->
<!-- 		android:layout_gravity="center" -->
<!-- 		android:layout_centerHorizontal="true" -->
<!-- 		android:text="V" -->
<!-- 		android:layout_margin="30dip" -->
<!-- 		/>    -->
		
		
   	<ImageView
   	    android:id="@+id/ui_detail_pk"
   	    android:src="@drawable/pk" 
   	    android:layout_gravity="center"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_centerHorizontal="true"
   	    android:layout_alignTop="@id/linearLayout1"
   	    android:layout_marginTop="26dip"
   	    />
   			
	<ImageView 
		android:id="@+id/ui_detail_degree"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_centerHorizontal="true"
   	    android:layout_below="@id/ui_detail_pk"
		/>      	
		
	<TextView 
		android:id="@+id/ui_detail_how_to_eat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center"
		android:layout_marginLeft="24dip"
		android:layout_marginRight="24dip"
		android:layout_marginTop="8dip"
		android:layout_marginBottom="8dip"
		android:layout_below="@id/linearLayout1"
		android:textColor="#ffff0000"
		android:textSize="22.0dip"
		android:scrollbars="vertical"
		/>
	
   	<TextView 
		android:id="@+id/ui_detail_hint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="24dip"
		android:layout_marginRight="24dip"
		android:layout_marginTop="8dip"
		android:layout_marginBottom="8dip"
		android:layout_below="@id/ui_detail_how_to_eat"
   	    android:layout_above="@+id/adLayout"
		android:textColor="#ffff0000"
		android:textSize="22.0dip"
		android:scrollbars="vertical"
		/>

   	<Button
   	    android:id="@+id/ui_detail_search"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_above="@+id/adLayout"
   	    android:layout_alignRight="@+id/linearLayout2"
   	    android:layout_marginBottom="36dip"
   	    android:background="@drawable/background_pressed_blue"
   	    android:gravity="center"
   	    android:drawableTop="@drawable/search"
   	    android:orientation="vertical"
   	    android:text="@string/menu_search" />
   	
   	<LinearLayout
        android:layout_alignParentBottom="true"
	    android:id="@+id/adLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />

</RelativeLayout>