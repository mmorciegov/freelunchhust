<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

 	<ImageView 
		android:id="@+id/gridview_item_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="2.0dip"
		android:layout_alignParentTop="true"
		android:scaleType="centerInside"
		/>
 	
 	<ImageView 
		android:id="@+id/gridview_item_degree"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/gridview_item_icon"
		android:layout_alignLeft="@id/gridview_item_icon"
		android:layout_alignRight="@id/gridview_item_icon"
		android:scaleType="fitStart"
		/>     
		    
	<TextView 
		android:id="@+id/gridview_item_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_below="@id/gridview_item_degree"
		android:layout_centerHorizontal="true"
		android:textColor="#ff000000"
		android:textSize="22.0dip" 
		android:layout_gravity="center"
		/>    	       

</RelativeLayout>